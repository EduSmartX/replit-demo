#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Get the commit message
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Define commit message pattern
# Format: type(scope): subject
# Example: feat(leave): add validation for carry forward days
pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,100}$"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message should follow the format:"
  echo "  type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo "Scope: Optional, e.g., (leave), (auth), (ui)"
  echo "Subject: Brief description (1-100 chars)"
  echo ""
  echo "Examples:"
  echo "  feat(leave): add validation for carry forward days"
  echo "  fix(auth): resolve token expiration issue"
  echo "  docs: update README with setup instructions"
  echo ""
  exit 1
fi
